#!/bin/sh

# $1: Integer percentage followed by "%" followed by "+" or "-"
control () {
    amixer -q set Master "$1"
}

case $1 in
    toggle)
        control toggle;;
    up)
        control 5%+;;
    down)
        control 5%-;;
    *)
        notify-send "Error: volume-control" "Invalid argument"
        exit 1;;
esac
