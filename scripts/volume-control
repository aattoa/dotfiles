#!/bin/sh

# $1: amixer command
control () {
    amixer -q set Master "$1"
}

case $1 in
    toggle)
        control toggle;;
    up)
        control 5%+;;
    down)
        control 5%-;;
    *)
        [ -n "$DISPLAY" ] && notify-send "Error: volume-control" "Invalid argument"
        exit 1;;
esac
