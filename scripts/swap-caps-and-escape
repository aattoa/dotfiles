#!/bin/sh

# FIXME: Swap-off works by resetting all setxkbmap options,
#        which would also interfere with unrelated options.

if setxkbmap -query | grep --quiet --fixed-strings "caps:swapescape"; then
    setxkbmap -option
    notify-send --expire-time=2000 "Caps/Escape swap off"
else
    setxkbmap -option caps:swapescape
    notify-send --expire-time=2000 "Caps/Escape swap on"
fi
