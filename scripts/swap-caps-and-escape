#!/bin/sh

# FIXME: Swap-off works by resetting all setxkbmap options,
#        which would also interfere with unrelated options.

if setxkbmap -query | grep -q -F "caps:swapescape"
then
    setxkbmap -option
    notify-send "Caps/Escape swap off"
else
    setxkbmap -option caps:swapescape
    notify-send "Caps/Escape swap on"
fi
