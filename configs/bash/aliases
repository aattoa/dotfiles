#!/bin/bash

# Default arguments
alias cp='cp --verbose --interactive'
alias mv='mv --verbose --interactive'
alias rm='rm --verbose --interactive=once'
alias rg='rg --smart-case'
alias bc='bc --quiet --standard'
alias pwd='pwd -P'
alias cal='cal --monday'
alias ghci='ghci -v0'
alias grep='grep --ignore-case --color=auto'
alias onefetch='onefetch --true-color=always'

# Convenience
alias q='exit'
alias md='mkdir --verbose --parents'
alias rd='rmdir --verbose'
alias sv='sudo vim'
alias vi='nvim'
alias ls='eza --git --group-directories-first'
alias py='python'
alias ns='newsboat'
alias sdn='shutdown now'
alias pod='mpv --no-video'
alias calendar='cal $(date +%Y)'
alias memcheck='valgrind --leak-check=full --show-leak-kinds=all --show-error-list=yes'
alias format-patch='git format-patch --stdout HEAD^'
alias yt-dlp-audio='yt-dlp --extract-audio --audio-format mp3 --audio-quality 0'
alias yt-dlp-noads='yt-dlp --sponsorblock-remove sponsor,selfpromo'
alias yt-dlp-plain='yt-dlp --sponsorblock-remove all'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
