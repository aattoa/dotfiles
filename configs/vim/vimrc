" Disable file type detection
filetype off

" Enable syntax highting
syntax enable

" Toggle search highlight
nnoremap \h :set hlsearch!<return>
" Toggle line numbers
nnoremap \n :set number!<return>

" Interactive search highlight
set incsearch
" Enable case insensitive search
set ignorecase

" Enable line numbers
set number

" Enable unicode
set encoding=utf-8

" Automatically indent new lines
set smartindent

" Enable syntax-based code folding
set foldmethod=syntax
" Don't fold files by default
set foldlevelstart=30

" Disable vi compatibility
set nocompatible
" Disable insert mode escape sequences
set noesckeys

" Enable persistent undo
set undofile

" Tabs appear as 4 spaces
set tabstop=4
" Set indentation to 4 spaces
set shiftwidth=4
" Convert tabs to spaces
set expandtab

" Set swap, undo, and backup directories
set directory=$XDG_CACHE_HOME/vim/swap
set undodir=$XDG_CACHE_HOME/vim/undo
set backupdir=$XDG_CACHE_HOME/vim/backup
