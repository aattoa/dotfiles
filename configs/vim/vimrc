" Disable vi compatibility
set nocompatible

" Disable file type detection
filetype off

" Faster CursorHold events
set updatetime=200


call plug#begin()
Plug 'neoclide/coc.nvim', {'branch': 'release'}
call plug#end()


filetype plugin indent on
syntax enable
colorscheme koehler


" Enable syntax-based code folding
set foldmethod=syntax

" Don't fold files by default
set foldlevelstart=30

" Toggle search highlight with two backslashes
nnoremap \\ :set hlsearch!<return>

" Always show file path
set statusline=%F


" Set indentation rules
set autoindent
set smartindent
set cindent

" Set backup, swap, and undo directories
set directory=$HOME/.cache/vim/swap
set undodir=$HOME/.cache/vim/undo
set backupdir=$HOME/.cache/vim/backup
set undofile


set encoding=utf-8 " Enable unicode
set number         " Enable line numbers
set tabstop=4      " Tabs appear as 4 spaces
set shiftwidth=4   " Set indentation to 4 spaces
set expandtab      " Convert tabs to spaces
set ignorecase     " Case insensitive search


source $MY_DOTFILES_REPO/configs/vim/coc-bindings.vim
